          }
        }
        if (pisoIr > 0 && Piso_ir2 == 0 && Piso_ir3 == 0) {

          if (pisoActual == 1 && pisoIr == 1) {
            Mi_bit = 0b10010000;
            digitalWrite(latchPin, LOW);
            shiftOut(dataPin, clockPin, LSBFIRST, Mi_bit);
            digitalWrite(latchPin, HIGH);
            if (irP1 == 0) {
              abrir_puerta_boton();
            }
            if (PIN_P1 == 0) {
              pisoIr_reset();
            }
            Piso_final = pisoActual;

          } else if (pisoActual == 1 && pisoIr == 2) {
            Mi_bit = 0b10001010;
            digitalWrite(latchPin, LOW);
            shiftOut(dataPin, clockPin, LSBFIRST, Mi_bit);
