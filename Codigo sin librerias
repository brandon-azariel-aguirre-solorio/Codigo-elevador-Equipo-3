            digitalWrite(latchPin, LOW);
            shiftOut(dataPin, clockPin, LSBFIRST, Mi_bit);
            digitalWrite(latchPin, HIGH);
            bajar_dos_pisos();
            if (PIN_P2 == 0) {
              pisoIr_reset();
